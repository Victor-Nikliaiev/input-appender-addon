{
    "manifest_version": 3,
    "name": "Input Appender (otvet.mail.ru)",
    "version": "1.0",
    "description": "Insert additional prepared text to end of each answer into text field on otvet.mail.ru",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["https://otvet.mail.ru/*"]
        }
    ]
}
